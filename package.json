{
  "name": "create-rolldown",
  "version": "0.0.7",
  "description": "Scaffolding tool for Rolldown projects",
  "keywords": [
    "bundler",
    "cli",
    "create-app",
    "rolldown",
    "scaffolding",
    "template"
  ],
  "homepage": "https://github.com/sunny-117/create-rolldown",
  "bugs": {
    "url": "https://github.com/sunny-117/create-rolldown/issues"
  },
  "license": "MIT",
  "author": "Sunny-117",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunny-117/create-rolldown.git"
  },
  "bin": {
    "create-rolldown": "index.js"
  },
  "files": [
    "dist",
    "index.js",
    "LICENSE",
    "README.md",
    "template-*/**"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "oxlint",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build && pnpm test",
    "release": "changelogen --release --bump prerelease && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@vercel/detect-agent": "^1.0.0",
    "cross-spawn": "^7.0.3",
    "mri": "^1.2.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/mri": "^1.1.5",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.6.1",
    "changelogen": "^0.6.2",
    "execa": "^9.0.0",
    "fast-check": "^3.15.0",
    "oxfmt": "^0.24.0",
    "oxlint": "^0.17.0",
    "simple-git-hooks": "^2.12.1",
    "tsdown": "^0.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint && git add -u"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
